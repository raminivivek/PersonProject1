@model IEnumerable<MVC.Models.Person>

@{
    ViewBag.Title = "InduvidualSummary";
}

<h2>Induvidual Summary</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Address
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address_T.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address_T.State)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address_T.AddressLine1) @Html.DisplayFor(modelItem => item.Address_T.AddressLine2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address_T.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address_T.State)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.Person_IDNO  }) |
            @Html.ActionLink("Details", "InduvidualDetails", new { id=item.Person_IDNO }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.Person_IDNO  })
        </td>
    </tr>
}

</table>
